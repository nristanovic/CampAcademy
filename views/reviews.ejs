
<%- include("./partials/header.ejs")%>
		<section class="bootcamp mt-5">
			<div class="container">
				<div class="row">
					<!-- Main col -->
					<div class="col-md-8 mb-5">
						<a	
							href="/api/v1/bootcamps/<%=bootcamp.id%>/courses"
							class="btn btn-secondary my-3"
							><i class="fas fa-chevron-left"></i> Bootcamp Info</a
						>
						<h1 class="mb-4"><%=bootcamp.id%></h1>
						<!-- Reviews -->
						<% reviews.forEach( function(review){ %>
						<article class="card mb-3" style="height: auto; width: auto;">
							<h5 class="card-header bg-dark text-white"><%=review.title%></h5>
							<div class="card-body">
								<h5 class="card-title">
									Rating: <span class="text-success"><%=review.rating%></span>
								</h5>
								<p class="card-text">
									<%=review.text%>
								</p>
								<p class="text-muted">Writtern By <%=review.user.name%></p>
							</div>
						</article>
						<% }); %>
					</div>
					<!-- Sidebar -->
					<div class="col-md-4">
						<!-- Rating -->
						<h1 class="text-center my-4">
							<span
								class="badge badge-secondary badge-warning rounded-circle p-3"
								><%=bootcamp.averageRating%></span
							>
							Rating
						</h1>
						<!-- Buttons -->
						<% if(currentUser !== null && currentUser.role !== 'publisher') { %>
						<a href="/api/v1/reviews/add/<%=bootcamp.id%>/review" class="btn btn-primary btn-block my-3"
							><i class="fas fa-pencil-alt"></i> Review This Bootcamp</a
						>
						<% }; %>
					</div>
				</div>
			</div>
		</section>

<%- include("./partials/footer.ejs")%>