		<%- include("./partials/header.ejs")%>
		<section class="container mb-5 mt-5">
			<div class="row">
				<div class="col-md-5 m-auto">
					<article class="card  py-2 px-4" style="height: auto; width: auto;" >
						<header class="card-header">
							<h4 class="mb-2">Manage Account</h4>
						</header>
						<div class="card-body">
							
							<form id="saveForm" action="/api/v1/users/<%=user.id%>?_method=PUT" method="POST">
								<div class="form-group">
									<label>Name</label>
									<input
										type="text"
										name="name"
										class="form-control"
										placeholder="Name"
										value="<%=user.name%>"
										required
									/>
								</div>
								<div class="form-group">
									<label>Email</label>
									<input
										type="email"
										name="email"
										class="form-control"
										placeholder="Email"
										value="<%=user.email%>"
										required
									/>
								</div>
								<div class="form-group col-md-5 mr-1 float-left">
									<div class="row">
										<!-- <div class="col-md-6"> -->
											<input
												form="saveForm"
												type="submit"
												value="Save"
												class="btn btn-success btn-block"
											/>
										<!-- </div> -->
										
									</div>
								</div>
							</form>
							<form id="deleteForm" action="/api/v1/users/<%=user.id%>?_method=DELETE" method="POST">
								<div class="form-group col-md-5 ml-1 float-right">
									<div class="row">
										<input
											form="deleteForm"
											type="submit"
											value="Delete"
											class="btn btn-danger btn-block"
											/>
											
									</div>
								</div>
							</form>	
						</div>
					</article>
				</div>
			</div>
		</section>

		<%- include("./partials/footer.ejs")%>